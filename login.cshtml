@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CryptoWallet.Pages.loginModel
@{
}
<section>
    <form method="post">
        <div class="container">
            <h1>Вход</h1>
            <p>Пожалуйста заполните форму для входа в аккаунт.</p>
            @{if (loginModel.registred == false || loginModel.corpsw == false)
                {<br><a class="pol">Неверно введены данные, попробуйте ещё раз!</a>}
             }
            <hr>
            <label for="login"><b>Логин</b></label>
            <input type="text" placeholder="Введите логин" name="login" required>
            <label for="psw"><b>Пароль</b></label>
            <input type="password" placeholder="Введите пароль" name="psw" required>
            <hr>
            <button type="submit" class="registerbtn">Вход</button> <br />

        </div>
    </form>
</section>